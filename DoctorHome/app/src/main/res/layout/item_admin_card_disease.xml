<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/disease_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/round_background_white1">

    <TextView
        android:id="@+id/disease_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:hint="Disease"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/disease_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:hint="Major"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/disease_desc"
        app:layout_constraintStart_toEndOf="@+id/disease_img"
        app:layout_constraintTop_toBottomOf="@+id/disease_name" />

    <TextView
        android:id="@+id/disease_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="Disease description relative to this diseaser andmore"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/disease_img"
        app:layout_constraintStart_toEndOf="@+id/disease_img" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/disease_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/virus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
