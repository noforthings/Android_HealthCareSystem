<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoctorHome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/primary_900</item>
    </style>
    <style name="Base.Theme.DBTester" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/primary_900</item>
    </style>
    <style name="Theme.DBTester" parent="Base.Theme.DBTester" />

    <style name="Theme.FixedLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#f5f5f5</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
        <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/primary_900</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/primary_900</item>
        </style>
        <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/primary_900</item>
        </style>

    <style name="Theme.DoctorHome.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DoctorHome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DoctorHome.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>